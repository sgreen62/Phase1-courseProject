package courseproject;

import java.util.Scanner;

public class DataEntry {
    private static Scanner input = new Scanner(System.in);

    public static String getString(String prompt) {
        System.out.print(prompt);
        return input.nextLine();
    }

    public static String getStringWithLimit(String prompt, int limit) {
        String entry;
        while (true) {
            System.out.print(prompt);
            entry = input.nextLine();
            if (!entry.isBlank() && entry.length() <= limit) {
                return entry;
            }
            System.out.println("Invalid entry. Max length is " + limit + " characters.");
        }
    }

    public static String getNumericString(String prompt, int length) {
        String entry;
        while (true) {
            System.out.print(prompt);
            entry = input.nextLine();
            if (entry.matches("[0-9]+") && entry.length() == length) {
                return entry;
            }
            System.out.println("Invalid entry. Must be " + length + " digits.");
        }
    }
}
